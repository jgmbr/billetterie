{# src/OC/CoreBundle/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="robots" content="noindex">
	<meta name="viewport" content="width=device-width">
    <title>{% block title %}{{ 'site.slogan'|trans }}{% endblock %}</title>
    {% block stylesheets %} 
      <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
	  <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.0/themes/smoothness/jquery-ui.css">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
        <!--[if lt IE 9]>
        <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
	  <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/edges.css') }}" />
    {% endblock %}
  </head>

  <body>

	<header>
    <!-- Fixed navbar -->
    <nav class="navbar -grey navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button id="ChangeToggle" type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <div id="navbar-hamburger">
                  <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                </div>
              <div id="navbar-close" class="hidden">
                  <span class="glyphicon glyphicon-remove"></span>
              </div>
          </button>
          <h1><a class="navbar-brand" href="{{ path('homepage',{'_locale': app.request.attributes.get('_locale') }) }}">
			<img class="logo" src="{{ asset('img/louvre_w.png') }}" width="24" />{{ 'site.slogan'|trans }}
		  </a>
          </h1>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="{% if (app.request.attributes.get('_route') == 'checkout_page') or (app.request.attributes.get('_route') == 'informations_page') or (app.request.attributes.get('_route') == 'summary_page') or (app.request.attributes.get('_route') == 'payment_page') or (app.request.attributes.get('_route') == 'confirmation_page') %}active{% endif %}"><a href="{{ path('checkout_page') }}">{{ 'site.menu.order'|trans }}</a></li>
            <li class="{% if app.request.attributes.get('_route') == 'contact_page' %}active{% endif %}"><a href="{{ path('contact_page') }}">{{ 'site.menu.contact'|trans }}</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="{% if app.request.attributes.get('_locale') == 'fr' %}active{% endif %}"><a href="{{ path(app.request.attributes.get('_route'), {'_locale': 'fr', 'codeBooking': app.request.attributes.get('codeBooking') }) }}">{{ 'site.langues.fr'|trans }}</a></li>
            <li class="{% if app.request.attributes.get('_locale') == 'en' %}active{% endif %}"><a href="{{ path(app.request.attributes.get('_route'), {'_locale': 'en', 'codeBooking': app.request.attributes.get('codeBooking') }) }}">{{ 'site.langues.en'|trans }}</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
	</header>

    <div class="block -grey edge--bottom"></div>

    <div class="wrapper container">

	{% block body %}
	{% endblock %}

	</div>

    <footer class="block -grey edge--top--reverse">
        <p>
            &copy; {{ 'now'|date('Y') }} - {{ 'site.slogan'|trans }} -
            <a class="{% if (app.request.attributes.get('_route') == 'credits_page') %}active{% endif %}" href="{{ path('credits_page',{'_locale': app.request.attributes.get('_locale') }) }}"> {{ 'site.menu.credits'|trans }} </a> -
            <a class="{% if (app.request.attributes.get('_route') == 'mentions_page') %}active{% endif %}" href="{{ path('mentions_page',{'_locale': app.request.attributes.get('_locale') }) }}"> {{ 'site.menu.mentions'|trans }} </a>
        </p>
    </footer>

    <a href="#" class="scrollToTop"> <span class="glyphicon glyphicon-chevron-up"></span> </a>

	{% block javascripts %} 
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
		<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.0/jquery-ui.min.js"></script>
		<script src="{{ asset('js/main.js') }}"></script>
	{% endblock %}

  </body>
</html>